<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f5"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_header_height"
            android:background="@color/colorPrimaryDark2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="@dimen/account_icon"
                    android:layout_height="@dimen/account_icon"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/other_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/space_normal"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/launch_desc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small_1" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_small_1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/space_normal"
                    android:paddingEnd="@dimen/space_normal"
                    android:paddingStart="@dimen/space_normal"
                    android:paddingTop="@dimen/space_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/login_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_small_1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/login_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/space_normal"
                        android:paddingEnd="@dimen/space_normal"
                        android:paddingStart="@dimen/space_normal"
                        android:paddingTop="@dimen/space_normal"
                        android:layout_marginEnd="@dimen/space_normal"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/register_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/space_normal"
                        android:paddingEnd="@dimen/space_normal"
                        android:paddingStart="@dimen/space_normal"
                        android:paddingTop="@dimen/space_normal"
                        android:layout_marginStart="@dimen/space_normal"
                        android:text="@string/register"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/exit_login_tv"
                android:visibility="gone"
                android:text="@string/login_out"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/space_normal"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
</layout>


